{
  "main": "src/main/index.js",
  "name": "Astro",
  "description": "A comic book reader for cbr/cbz files",
  "author": {
    "name": "Javis PÃ©rez",
    "email": "javisperez@gmail.com"
  },
  "repository": "https://github.com/javisperez/astro",
  "version": "0.0.10",
  "scripts": {
    "dev": "NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "watch": "NODE_ENV=development node_modules/webpack/bin/webpack.js --watch --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "hot": "NODE_ENV=development webpack-dev-server --inline --hot --config=node_modules/laravel-mix/setup/webpack.config.js",
    "production": "NODE_ENV=production node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "electron": "NODE_ENV=development npm run electron:mac",
    "electron:mac": "NODE_ENV=development node_modules/electron/dist/Electron.app/Contents/MacOS/Electron .",
    "package": "NODE_ENV=production npm run build; npm run package:osx; npm run package:win; npm run package:linux;",
    "package:osx": "NODE_ENV=production electron-packager . Astro --platform=darwin --arch=x64 --icon=assets/app.icns --out=package --asar=true --overwrite=force",
    "package:win": "NODE_ENV=production electron-packager . Astro --platform=win32 --arch=ia32 --icon=assets/app.ico --out=package --asar=true --overwrite=force",
    "package:linux": "NODE_ENV=production electron-packager . Astro --platform=linux --arch=ia32 --icon=assets/app.ico --out=package --asar=true --overwrite=force",
    "pack": "NODE_ENV=production electron-builder --dir",
    "build": "NODE_ENV=production rm -r ./build/* && npm run production && electron-builder -mwl",
    "build:mac": "NODE_ENV=production rm -r ./build/* && npm run production && electron-builder --mac",
    "build:win": "NODE_ENV=production rm -r ./build/* && npm run production && electron-builder --win",
    "build:linux": "NODE_ENV=production rm -r ./build/* && npm run production && electron-builder --linux"
  },
  "dependencies": {
    "adm-zip": "^0.4.7",
    "dexie": "3.0.0-alpha.2",
    "electron-unrar-js": "^1.0.1",
    "feather-icons": "^4.7.0",
    "glob-all": "^3.1.0",
    "laravel-mix": "^2.1.11",
    "md5-file": "^3.2.3",
    "typeface-roboto": "^0.0.54",
    "vue": "^2.5.16"
  },
  "devDependencies": {
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "browser-sync": "^2.23.6",
    "browser-sync-webpack-plugin": "2.0.1",
    "electron": "^2.0.0-beta.5",
    "electron-builder": "^20.6.2",
    "electron-packager": "^11.1.0",
    "eslint": "^4.19.1",
    "eslint-config-vue": "^2.0.2",
    "eslint-plugin-vue": "^4.2.0",
    "purgecss-webpack-plugin": "^0.22.0",
    "tailwindcss": "^0.5.1"
  },
  "babel": {
    "plugins": [
      "transform-object-rest-spread"
    ]
  },
  "build": {
    "appId": "astro.comic.book.reader",
    "directories": {
      "output": "build"
    },
    "fileAssociations": [
      {
        "ext": [
          "cbr",
          "cbz"
        ],
        "name": "Comic book file",
        "description": "Comic book file",
        "icon": "icon.icns",
        "role": "Viewer"
      }
    ],
    "files": [
      "src/main/*.js",
      "dist",
      "node_modules"
    ],
    "protocols": [
      {
        "name": "Astro comic reader",
        "schemes": [
          "astro"
        ]
      }
    ],
    "mac": {
      "category": "your.app.category.type"
    },
    "nsis": {
      "perMachine": true
    }
  }
}
