{
  "main": "src/main/index.js",
  "name": "Astro",
  "description": "A comic book reader for cbr/cbz files",
  "author": {
    "name": "Javis PÃ©rez",
    "email": "javisperez@gmail.com"
  },
  "repository": "https://github.com/javisperez/astro",
  "version": "0.0.1",
  "scripts": {
    "dev": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "watch": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --watch --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "hot": "cross-env NODE_ENV=development webpack-dev-server --inline --hot --config=node_modules/laravel-mix/setup/webpack.config.js",
    "production": "cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "electron": "cross-env NODE_ENV=development npm run electron:mac",
    "electron:mac": "cross-env NODE_ENV=development node_modules/electron/dist/Electron.app/Contents/MacOS/Electron .",
    "pack": "cross-env NODE_ENV=production electron-builder --dir",
    "package": "cross-env NODE_ENV=production rm -r ./build/* && npm run production && electron-builder -mwl",
    "package:mac": "cross-env NODE_ENV=production rm -r ./build/* && npm run production && electron-builder --mac",
    "package:win": "cross-env NODE_ENV=production rm -r ./build/* && npm run production && electron-builder --win",
    "package:linux": "cross-env NODE_ENV=production rm -r ./build/* && npm run production && electron-builder --linux"
  },
  "dependencies": {
    "adm-zip": "^0.4.7",
    "dexie": "3.0.0-alpha.2",
    "dragscroll": "^0.0.8",
    "electron-editor-context-menu": "^1.1.1",
    "electron-unrar-js": "^1.0.1",
    "feather-icons": "^4.7.0",
    "glob-all": "^3.1.0",
    "laravel-mix": "^2.1.11",
    "md5-file": "^3.2.3",
    "typeface-roboto": "^0.0.54",
    "vue": "^2.5.16"
  },
  "devDependencies": {
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "browser-sync": "^2.23.6",
    "browser-sync-webpack-plugin": "2.0.1",
    "cross-env": "^5.1.6",
    "electron": "^2.0.0-beta.5",
    "electron-builder": "^20.6.2",
    "electron-packager": "^11.1.0",
    "eslint": "^4.19.1",
    "eslint-config-vue": "^2.0.2",
    "eslint-plugin-vue": "^4.2.0",
    "purgecss-webpack-plugin": "^0.22.0",
    "tailwindcss": "^0.5.1",
    "vue-devtools": "^3.1.9"
  },
  "babel": {
    "plugins": [
      "transform-object-rest-spread"
    ]
  },
  "build": {
    "appId": "astro.comic.book.reader",
    "directories": {
      "output": "build"
    },
    "fileAssociations": [
      {
        "ext": [
          "cbr",
          "cbz"
        ],
        "name": "Comic book file",
        "description": "Comic book file",
        "icon": "icon.icns",
        "role": "Viewer"
      }
    ],
    "files": [
      "src/main/*.js",
      "dist",
      "node_modules"
    ],
    "protocols": [
      {
        "name": "Astro comic reader",
        "schemes": [
          "astro"
        ]
      }
    ],
    "mac": {
      "category": "your.app.category.type"
    },
    "nsis": {
      "perMachine": true
    }
  }
}
